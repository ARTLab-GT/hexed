from setuptools import setup, Extension
from Cython.Build import cythonize

ext_modules = [
    Extension(
        "hexed",
        ["hexed.pyx"],
        language="c++",
        libraries=["hexed"],
        include_dirs=["@CMAKE_SOURCE_DIR@/include", "@CMAKE_BINARY_DIR@/include/auto"],
        extra_compile_args=["-Wno-unknown-pragmas", "-std=c++20"]
    )
]

setup(name="hexed", ext_modules=cythonize(ext_modules, language_level="3"))
